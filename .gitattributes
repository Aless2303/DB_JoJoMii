# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files (cross-platform consistency)
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.sh text eol=lf
*.env text eol=lf
*.env.* text eol=lf
*.gitignore text eol=lf
*.gitattributes text eol=lf
*.editorconfig text eol=lf
*.prettierrc text eol=lf
*.eslintrc text eol=lf
*.babelrc text eol=lf
Makefile text eol=lf
Dockerfile text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.lock binary

# Diff settings for better readability
*.md diff=markdown
*.ts diff=typescript
*.tsx diff=typescript
*.css diff=css
